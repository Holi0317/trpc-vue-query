{
  "compilerOptions": {
    "lib": ["es2023", "DOM"],
    "module": "preserve",
    "target": "es2022",
    "strict": true,
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,

    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "isolatedModules": true
  },
  "include": ["src", "test"]
}
